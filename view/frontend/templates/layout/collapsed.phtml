<?php /** @var \Magento\Framework\Escaper $escaper */ ?>
<?php
    $attributes = new \Magento\Framework\DataObject();
    $isFirst = true;
?>
<div class="easytabs-tablist" role="tablist">
    <?php foreach ($tabs as $_tab) : ?>
        <?php
            $alias = $block->escapeHtmlAttr($_tab['alias']);
            $attributes->setData(array_filter([
                'class' => 'data switch',
                'id' => "tab-label-{$alias}-title",
                'data-toggle' => 'switch',
                'data-ajaxurl' => ($_tab['is_ajax'] ? $block->getAjaxUrl($alias) : false)
            ]));
        ?>
        <div id="tab-label-<?= $escaper->escapeHtmlAttr($alias) ?>"
            class="data item title<?= $isFirst ? ' active' : '' ?>"
            aria-labelledby="tab-label-<?= $escaper->escapeHtmlAttr($alias) ?>-title"
            aria-controls="<?= $escaper->escapeHtmlAttr($alias) ?>"
            data-role="collapsible"
        >
            <a <?= /* @noEscape */ $attributes->serialize() ?> tabindex="-1" href="#<?= $escaper->escapeHtmlAttr($alias) ?>">
                <?= $escaper->escapeHtml($_tab['title'], ['span']) ?>
            </a>
        </div>
    <?php $isFirst = false; endforeach; ?>
</div>
<?php foreach ($tabs as $_tab) :
    $alias = $block->escapeHtmlAttr($_tab['alias']);
?>
    <div id="<?= $escaper->escapeHtmlAttr($alias) ?>" class="data item content" data-role="content">
        <?= /* @noEscape */ $_tab['is_ajax'] ? '' : $_tab['child_html'] ?>
    </div>
<?php endforeach; ?>
